<div id="project">
  <div class="title"> <h1 class="work">My work experience</h1> 
      {{#if isAdmin}}
    <div>
      <a href="/projects/new" class="new-button"> New Project</a>
    </div>
    </div>
  <div class="main-container">

    {{/if}}

    {{#if hasDatabaseError}}
      <div>Sorry there was a problem with the database.
        <br />
        {{theError}}
      </div>
    {{else}}
      {{#each projects}}
        <div>
          <div class="projects-container">
            <div><a href="/projects/{{pid}}"><img
                  src="{{pimgURL}}"
                  alt="{{pimgURL}}"
                /></a></div>
            <h2><a href="/projects/{{pid}}">{{pname}} - {{ptype}}</a></h2>
          </div>
          <div class="modify-delete">
            {{#if ../isAdmin}}
            <div>
              <a href="/projects/update/{{pid}}">Modify</a> - <a href="/projects/delete/{{pid}}">Delete</a>
            </div>
            {{/if}}
          </div>
        </div>
      {{/each}}
    {{/if}}

  </div>
</div>